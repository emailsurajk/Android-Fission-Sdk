<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="TabTitle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="optionButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="setUserInfoLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="setTimingInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="setHRPercentageLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_button_text_color</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BackgroundEditText">
        <item name="android:background">@drawable/bg_edit_text_rectangle</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <declare-styleable name="GridChartView">
        <attr name="xLineColor" format="color"/>
        <attr name="xTextColor" format="color"/>
        <attr name="yLineColor" format="color"/>
        <attr name="yTextColor" format="color"/>
        <attr name="gridLineColor" format="color"/>
        <attr name="centerLineColor" format="color"/>
        <attr name="xLineSize" format="dimension"/>
        <attr name="xTextSize" format="dimension"/>
        <attr name="yLineSize" format="dimension"/>
        <attr name="yTextSize" format="dimension"/>
        <attr name="yTextMarginRight" format="dimension"/>
        <attr name="xTextMarginTop" format="dimension"/>
        <attr name="gridLineSize" format="dimension"/>
        <attr name="centerLineSize" format="dimension"/>
        <attr name="centerMarginTop" format="dimension"/>
        <attr name="xItemWidth" format="dimension"/>
        <attr name="maxValue" format="integer" />
        <attr name="unitValue" format="integer" />
        <attr name="startAutoMovingMarginRight" format="dimension"/>

    </declare-styleable>
</resources>
