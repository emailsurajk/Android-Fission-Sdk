<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ib_close"
        android:layout_marginTop="5dp"
        android:text="Set HR percentage"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/ic_close" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ib_close"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


    <RadioGroup
        android:id="@+id/rg_time_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/rb_time_model1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="12" />

        <RadioButton
            android:id="@+id/rb_time_model2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24" />
    </RadioGroup>


    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_time_model"
        android:layout_marginTop="50dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>