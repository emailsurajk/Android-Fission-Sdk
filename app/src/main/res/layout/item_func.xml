<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvTitle"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvWeather"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvWeatherTitle"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvWeatherTitle"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:visibility="gone"
        android:layout_margin="5dp"
        android:id="@+id/tvAir"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvWeather"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvTitle1"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>




    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvHigh"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tvLow"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvHigh"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <TextView
        android:visibility="gone"
        android:layout_margin="5dp"
        android:id="@+id/tvPm"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvLow"/>

</androidx.constraintlayout.widget.ConstraintLayout>